body {
  ::selection {
    background: lighten($pink-color, 50%);
  }
  ::-moz-selection {
    background: lighten($pink-color, 50%);
  }
}

.full-bleed-image {
  background-size: cover;

  background-position-x: center;
  background-position-y: bottom;

  text-align: center;

  &.header {
    height: 24em;
  }

  &.home {
    background-image: url(<%= asset_path 'home-header-1920.png' %>);

    .home-content {
      display: inline-block;

      width: 500px;
      height: 132px;

      margin-top: 9em;

      background-image: url(<%= asset_path('home-header-content.png') %>);
      background-image: url(<%= asset_path('home-header-content.svg') %>), none;
      background-repeat: no-repeat;
      background-position: 50% 50%;
    }
  }

  &.bleed-glow {
    @include box-shadow(inset 0 0 30px 0 rgba(28,0,0,0.2))
  }
}

.header-divider{
  display: inline-block;

  width: 86px;
  height: 87px;

  margin-top: -43px;

  background-image: url(<%= asset_path('home-divider.png') %>);
  background-image: url(<%= asset_path('home-divider.svg') %>), none;
  background-repeat: no-repeat;
  background-position: 50% 50%;
}

body.home {
  &> .container {
    margin-bottom: 35px;

    &:last-child {
      margin-bottom: 0;
    }
  }
}

p.lead {
  font-size: 25px;
}

@media(max-width: 560px){
  .full-bleed-image {
    &.home {
      background-position-x: left;

      .home-content {
        width: 94%;
        background-size: 100%;
      }
    }
  }
}

<% image_name = 'home' %>
@media(max-width: 1075px){
  .full-bleed-image {
    &.<%= image_name %> {
      background-image: url(<%= asset_path "#{image_name}-header-1075.png" %>);
    }
  }
}

@media(min-width: 1920px){
  .full-bleed-image {
    &.<%= image_name %> {
