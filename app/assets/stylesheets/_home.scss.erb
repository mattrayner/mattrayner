.full-bleed-image {
  &.home {
    height: 24em;

    background-image: url(<%= asset_path 'home-header-1920.png' %>);
    background-size: cover;

    background-position-x: center;
    background-position-y: bottom;

    text-align: center;

    .home-content {
      display: inline-block;

      width: 500px;
      height: 132px;

      margin-top: 9em;

      background-image: url(<%= asset_path('home-header-content.png') %>);
      background-image: url(<%= asset_path('home-header-content.svg') %>), none;
      background-repeat: no-repeat;
      background-position: 50% 50%;
    }
  }
}

.home-divider{
  display: inline-block;

  width: 86px;
  height: 87px;

  margin-top: -43px;

  background-image: url(<%= asset_path('home-divider.png') %>);
  background-image: url(<%= asset_path('home-divider.svg') %>), none;
  background-repeat: no-repeat;
  background-position: 50% 50%;
}

body.home {
  p.lead {
    font-size: 25px;
  }

  &> .container {
    margin-bottom: 35px;

    &:last-child {
      margin-bottom: 0;
    }
  }
}

@media(max-width: 560px){
  .full-bleed-image {
    &.home {
      background-position-x: left;

      .home-content {
        width: 94%;
        background-size: 100%;
      }
    }
  }
}

@media(max-width: 1075px){
  .full-bleed-image {
    &.home {
      background-image: url(<%= asset_path 'home-header-1075.png' %>);
    }
  }
}

@media(min-width: 1920px){
  .full-bleed-image {
    &.home {
      background-image: url(<%= asset_path 'home-header-2200.png' %>);
    }
  }
}

@media(min-width: 2200px){
  .full-bleed-image {
    &.home {
      background-image: url(<%= asset_path 'home-header-3200.png' %>);
    }
  }
}

@media(min-width: 3200px){
  .full-bleed-image {
    &.home {
      background-image: url(<%= asset_path 'home-header-3840.png' %>);
    }
  }
}