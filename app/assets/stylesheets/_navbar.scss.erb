.navbar {
  height:        4em;
  margin-bottom: 0;

  .container {
    .navbar-header {
      margin: 0;
      height: 4em;

      .navbar-brand {
        margin-top:  0.65em;
        margin-left: 0;

        &.mattrayner-logo {
          background-image:    url(<%= asset_path('mattrayner-logo.png') %>);
          background-image:    url(<%= asset_path('mattrayner-logo.svg') %>), none;
          background-repeat:   no-repeat;
          background-position: 50% 50%;

          width:               221px;
          height:              37px;

          padding:             0;
        }
      }

      .navbar-toggle {
        margin: 11px 0;
      }
    }

    ul.nav {
      li {
        margin-left: 1em;

        a {
          color:     $white;
          padding:   18px 0 18px;
          font-size: 16px;

          @include standard-transition(color);

          &:hover {
            color: lighten($pink-color, 20%)
          }
        }

        &.active {
          a {
            background:  none;
            font-weight: 400;

            &:hover {
              color: $white;
            }
          }
        }
      }

      &.navbar-pink {
        a {
          color: $pink-color;
        }
      }

      &.site-nav {
        margin-left: 25px;
      }
    }
  }

  &.navbar-fixed-top {
    &.sticky {
      top: 2em;
      position: absolute;
    }
  }

  &.navbar-translucent {
    background-color: $navigation-bg;
    border:           none;
  }
}

@media(max-width: 768px) {
  .navbar {
    .container {
      .navbar-collapse {
        background-color: $navigation-bg;

        ul.nav {
          &.navbar-nav {
            margin: 0;
          }
        }
      }
    }
  }
}