<% content_for :title, 'Forgot your password : Matt Rayner' %>
<% content_for :modal_title, 'Forgot your password' %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.label :email, class: 'sr-only' %><br />
  <%= f.email_field :email, autofocus: true, placeholder: 'Email Address', class: 'form-control' %>

  <div class="actions">
    <%= f.submit 'Reset password', class: 'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
