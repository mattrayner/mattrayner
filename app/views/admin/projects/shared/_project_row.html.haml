%tr
  %td
    = link_to project.title, admin_project_path(project)
  %td.text-right
    = link_to '<span class="glyphicon glyphicon-pencil"></span><span class="sr-only"> Edit</span>'.html_safe, edit_admin_project_path(project), class: 'btn btn-default'
    = link_to '<span class="glyphicon glyphicon-trash"></span><span class="sr-only"> Delete</span>'.html_safe, admin_project_path(project), method: :delete, class: 'btn btn-default btn-danger', data: { confirm: 'Are you sure you want to delete this project? This is PERMANENT!' }