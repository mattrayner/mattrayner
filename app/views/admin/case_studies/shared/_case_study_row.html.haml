%tr
  %td
    = link_to case_study.title, admin_case_study_path(case_study)
  %td.text-right
    = link_to '<span class="glyphicon glyphicon-pencil"></span><span class="sr-only"> Edit</span>'.html_safe, edit_admin_case_study_path(case_study), class: 'btn btn-default'
    = link_to '<span class="glyphicon glyphicon-trash"></span><span class="sr-only"> Delete</span>'.html_safe, admin_case_study_path(case_study), method: :delete, class: 'btn btn-default btn-danger', data: { confirm: 'Are you sure you want to delete this case study? This is PERMANENT!' }