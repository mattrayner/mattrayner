%tr
  %td
    = link_to skill.title, admin_skill_path(skill)
  %td.text-right
    = link_to '<span class="glyphicon glyphicon-pencil"></span><span class="sr-only"> Edit</span>'.html_safe, edit_admin_skill_path(skill), class: 'btn btn-default'
    = link_to '<span class="glyphicon glyphicon-trash"></span><span class="sr-only"> Delete</span>'.html_safe, admin_skill_path(skill), method: :delete, class: 'btn btn-default btn-danger', data: { confirm: 'Are you sure you want to delete this skill? This is PERMANENT!' }